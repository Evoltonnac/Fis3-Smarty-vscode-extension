{
    "name": "Fis3-Smarty",
    "displayName": "Fis3-Smarty",
    "publisher": "xingminghua",
    "description": "Fis3-smarty 技术栈下辅助开发的工具",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "smarty",
        "fis3",
        "snippets"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:smarty"
    ],
    "contributes": {
        "languages": [
            {
                "id": "smarty",
                "aliases": [
                    "Smarty",
                    "smarty"
                ],
                "extensions": [
                    ".tpl",
                    ".smarty",
                    ".html.smarty"
                ],
                "configuration": "./smarty.configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "smarty",
                "path": "./snippets/fis3-smarty.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.47.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
